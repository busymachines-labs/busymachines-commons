<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" monitorInterval="30" packages="com.busymachines.commons.logging" shutdownHook="disable">
    <Appenders>
        <File name="FileAp" fileName="output.log" bufferedIO="false" >
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n %K"/>
        </File>
        <ESAppender
                clusterName="AgileXs"
                name="ES"
                queueSize="1000"
                bulkSize="100"
                sleepTime="500"
                indexNamePrefix="commons">
            <ESLayout withCodeLocation="false" />
        </ESAppender>
        <ESAppender
                clusterName="AgileXs"
                name="ESTest"
                queueSize="1000"
                bulkSize="100"
                sleepTime="500"
                indexNamePrefix="tests">
            <ESLayout withCodeLocation="false" />
        </ESAppender>
    </Appenders>
    <Loggers>
        <logger name="com.busymachines" level="TRACE" additivity="false">
            <AppenderRef ref="ES"/>
        </logger>
        <logger name="com.busymachines.commons" level="TRACE" additivity="false">
            <AppenderRef ref="ESTest"/>
        </logger>
          <Root level="TRACE">
            <AppenderRef ref="FileAp"/>
           </Root>
    </Loggers>
</Configuration>